<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    tools:context="com.leyou.sdk.ui.LoginDialogFragment">

    <LinearLayout
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/leyou_drawable_white_round_big"
        android:orientation="vertical"
        >


        <ProgressBar
            android:id="@+id/leyou_id_logindialog_iv_loadingtu"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            style="@android:style/Widget.Holo.Light.ProgressBar.Large"
            android:gravity="center" />


        <TextView
            android:id="@+id/leyou_id_progress_tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载中"
            android:textSize="@dimen/layout_dimens_text_smali"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:textColor="@color/leyou_color_orange2" />

    </LinearLayout>

</FrameLayout>
