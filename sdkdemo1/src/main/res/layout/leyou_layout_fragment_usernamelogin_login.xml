<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="290dp"
    android:layout_height="280dp"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/leyou_drawable_white_round_small"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    tools:context="com.leyou.sdk.ui.RegisterPhoneFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="115dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/leyou_image_login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:background="#F3F3F3"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/leyou_id_usernamelogin_et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/leyou_string_please_input_account_and_phone"
            android:lines="1"
            android:textSize="@dimen/layout_dimens_text_smali" />

        <ImageView
            android:id="@+id/leyou_id_usernamelogin_iv_username"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/leyou_image_arrow_down" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F3F3F3"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/leyou_id_usernamelogin_et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/leyou_string_please_input_pwd"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textSize="@dimen/layout_dimens_text_smali" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/leyou_id_usernamelogin_iv_autologin"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/leyou_drawable_autologin_check_selector"
            android:button="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/leyou_id_usernamelogin_iv_autologin"
            android:gravity="center"
            android:hint="@string/leyou_string_auto_login"
            android:textSize="@dimen/layout_dimens_text_smali" />

    </RelativeLayout>

    <Button
        android:id="@+id/leyou_id_btn_usernamelogin_login"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/leyou_drawable_orange_round"
        android:text="@string/leyou_string_login"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/leyou_id_usernamelogin_btn_tophone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/leyou_drawable_orange_white_round"
        android:text="@string/leyou_string_phone_login"
        android:textColor="@color/leyou_color_orange"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/leyou_id_usernamelogin_iv_youku"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/leyou_image_youke_login" />

            <ImageView
                android:id="@+id/leyou_id_usernamelogin_iv_sina"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/leyou_image_sina_login"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/leyou_id_usernamelogin_iv_qq"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/leyou_image_qq_login"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/leyou_id_usernamelogin_iv_phone"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/leyou_image_phone_login" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/leyou_id_login_tv_forgetpwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/leyou_string_forget_pwd"
                android:textColor="@color/leyou_color_orange"
                android:textSize="@dimen/layout_dimens_text_middle" />

            <TextView
                android:id="@+id/leyou_id_login_tv_toregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/leyou_string_account_register"
                android:textColor="@color/leyou_color_orange"
                android:textSize="@dimen/layout_dimens_text_middle" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
